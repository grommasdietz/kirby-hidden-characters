{
    "name": "grommasdietz/kirby-hidden-characters",
    "description": "Kirby plugin to visually show hidden characters like spaces, soft hyphens, line breaks or paragraph endings in focused writer, textarea and text fields",
    "type": "kirby-plugin",
    "license": "MIT",
    "version": "2.0.9",
    "homepage": "https://github.com/grommasdietz/kirby-hidden-characters",
    "authors": [
        {
            "name": "Grommas Dietz",
            "email": "info@grommas-dietz.com",
            "homepage": "https://grommas-dietz.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/grommasdietz/kirby-hidden-characters/issues",
        "source": "https://github.com/grommasdietz/kirby-hidden-characters"
    },
    "keywords": [
        "kirby",
        "kirby-cms",
        "kirby-plugin",
        "hidden-characters"
    ],
    "require": {
        "getkirby/composer-installer": "^1.2"
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    },
    "archive": {
        "exclude": [
            "/.editorconfig",
            "/.gitattributes",
            "/.github",
            "/.gitignore",
            "/.vscode",
            "/composer.lock",
            "/package-lock.json",
            "/package.json",
            "/src/"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
